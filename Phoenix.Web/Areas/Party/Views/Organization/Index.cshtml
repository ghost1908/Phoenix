@model List<Phoenix.Web.Models.Organization.OrganizationListViewModel>

@{
    ViewData["Title"] = "Структура организации";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Рівень</th>
            <th>Назва організації</th>
            <th>Співробітників</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Level</td>
                    <td>@item.OrganizationName</td>
                    <td>@item.CountPerson</td>
                </tr>
            }
    </tbody>
</table>
